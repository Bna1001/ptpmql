@model IEnumerable<baithuchanh2003.Models.Customer>
    <p>
        <a class="btn btn-success" asp-action="Create">Create a new Customer</a>
    </p>
    <table class="table table-all">
        <tr>
            <th>Customer Code</th>
            <th>Name</th>
            <th>Address</th>
            <th>Phone Number</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(m => item.CustomerCode)</td>
                <td>@Html.DisplayFor(m => item.FullName)</td>
                <td>@Html.DisplayFor(m => item.Address)</td>
                <td>@Html.DisplayFor(m => item.PhoneNumber)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.CustomerCode"><input type="submit" value="Sửa"></a>
                    <a asp-action="Delete" asp-route-id="@item.CustomerCode"><input type="submit" value="Xóa"></a>
                </td>
            </tr>            
        }
    </table>